<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
      res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<form action="/account/register" method="post" class="signup-form">
    <label>
        <span class="label-text">First name:</span>
        <input type="text" name="account_firstname" size="45" required value="<%= locals.account_firstname %>">
    </label>
    <br>
    <label>
        <span class="label-text">Last name:</span>
        <input type="text" name="account_lastname" size="45" required value="<%= locals.account_lastname %>">
    </label>
    <label>
        <span class="label-text">Email address:</span>
        <input type="email" name="account_email" size="45" placeholder="Enter a valid email address" required value="<%= locals.account_email %>">
    </label>
    <label>
        <span class="label-text">Password:</span>
        <input type="password" name="account_password" size="45" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
    </label>

    <input type="submit" name="submit" value="Register" class="submit-btn">
</form>