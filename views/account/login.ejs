<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
      res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<form action="/account/login" method="post" class="login-form">
    <label>
        <span class="label-text">Email:</span>
        <input type="email" name="account_email" size="45" required value="<%= locals.account_email %>">
    </label>
    <br>
    <label>
        <span class="label-text">Password:</span>
        <input type="password" name="account_password" size="45" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
    </label>

    <input type="submit" name="submit" value="Login" class="submit-btn">

    <div class="signup">
        No account? <a href="/account/register">Sign-up</a>
    </div>
</form>